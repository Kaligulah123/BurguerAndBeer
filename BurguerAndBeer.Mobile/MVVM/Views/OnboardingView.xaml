<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BurguerAndBeer.Mobile.MVVM.Views.OnboardingView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="OnboardingView"
    BackgroundColor="Black"
    Shell.NavBarIsVisible="False">

    <VerticalStackLayout Padding="15" Spacing="30">
        <Label
            FontAttributes="Bold"
            FontSize="35"
            Text="Welcome To...." />
        <Image HeightRequest="350" Source="burguer_and_beer" />
        <Button
            Clicked="Signin_Clicked"
            Style="{StaticResource btn_base}"
            Text="Signin" />

        <Button
            Clicked="Signup_Clicked"
            Style="{StaticResource btn_base}"
            Text="Signup" />
    </VerticalStackLayout>
</ContentPage>